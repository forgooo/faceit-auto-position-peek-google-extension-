{
    "manifest_version": 3,
    "name": "FACEIT AUTO PEEK POSITION",
    "version": "2.0",
    "description": "Automatically peek position to FACEIT chat when team peaks a map.",
    "permissions": [
      "activeTab", "storage", "scripting"
    ],
    "content_scripts": [
      {
        "matches": ["*://*.faceit.com/*"],
        "js": ["js/content.js"]
      }
    ],
    "background": {
      "service_worker": "js/background.js"
    },
    "action": {
      "default_popup": "html/popup.html",
      "default_icon": {
        "16": "icons/icon1.png",
        "48": "icons/icon2.png",
        "128": "icons/icon3.png"
      }
    },
    "icons": {
      "16": "icons/icon1.png",
      "48": "icons/icon2.png",
      "128": "icons/icon3.png"
    }
  }
  
